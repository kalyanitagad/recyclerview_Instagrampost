<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/txtPostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imgPost"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textSize="25sp"

        />

    <ImageView

        android:id="@+id/imgPost"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPostTitle" />

    <TextView
        android:id="@+id/txtPostLikes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/imgPost"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
         android:textSize="30sp"
         android:gravity="center"
         android:layout_marginBottom="40dp"

        />

    <ImageView

        android:id="@+id/imgViewLikeButton"
        android:layout_width="50dp"
        android:layout_height="55dp"
        app:layout_constraintRight_toLeftOf="@id/txtPostLikes"
        app:layout_constraintTop_toBottomOf="@id/imgPost"
        />

</androidx.constraintlayout.widget.ConstraintLayout>